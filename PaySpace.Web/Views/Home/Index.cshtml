@model HomeViewModel;
@{
    ViewData["Title"] = "Home Page";
}
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap-min.css" />
</head>
<body>
    @using (Html.BeginForm("calculatetax", "tax", FormMethod.Post))
    {
        <div  class="container">
            <h3 style="text-align:center">PaySpace Tax Calculator</h3>
            <table class="table table-hover table-bordered">
                <tr>
                    <td>Postal Code: </td>
                    <td>@Html.DropDownListFor(m => m.SelectedPostalCodeId, new SelectList(Model.PostalCodes, "Id", "Code"), "Please select", new { id = "ddlPostalCodes" })</td>
                </tr>
                <tr>
                    <td>Income: </td>
                    <td>
                        @Html.TextBoxFor(m => m.Income, new { id = "txtIncome" })
                    </td>
                </tr>
            </table>
            <p><input type="submit" id="btnCalculate" class="btn btn-info" value="Submit" /></p>
            @*<p><input type="button" id="btnCalculate" value="Calculate Tax" /> </p>*@
        </div>

    }

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
